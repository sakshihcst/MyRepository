	<appender name="wsfileAppender" class="org.apache.log4j.RollingFileAppender">
		<param name="Threshold" value="INFO" />
		<param name="File" value="${jboss.server.log.dir}/Services.log" />
		<!--<param name="File" value="/appl/mpuDirect/jboss/log/mpuwebservices.log" />-->
		<layout class="org.apache.log4j.PatternLayout">
			 <param name="ConversionPattern" value="DT:%d{MM/dd/yyyy HH\:mm\:ss} LL:%5p hostname:${jboss.host.name} txnId:%X{txnId} storeId:%X{storeId} MSG:%m%n" />
		</layout>
		<param name="MaxFileSize" value="20MB" />
		<param name="MaxBackupIndex" value="5" />
	</appender>
	
	<logger name="wsprofilerLogger" additivity="false">
		<level value="INFO" />
		<appender-ref ref="wsfileAppender" />
	</logger>
	
		<appender name="ASYNC" class="org.apache.log4j.AsyncAppender">
		<param name="BufferSize" value="500" />
		<appender-ref ref="fileAppender" />
		<appender-ref ref="consoleAppender" />
	</appender>
	<root>
		<priority value="INFO" />
		<appender-ref ref="ASYNC" />
	</root>

</log4j:configuration>